<div class="row">

  <div class="span12">
    <h3 class="demo-panel-title">What if you could only make one status update per day? What would you share?</h3>

    <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <ul>
          <% @user.errors.full_messages.each do |e| %>
            <li><%= e %></li>
          <% end %>
        </ul>
      <% end %>

    <div class="login-form">
      <div class="control-group">
        <%= f.text_field :email, placeholder: "Email", class: "login-field" %>
        <label class="login-field-icon fui-mail-16" for="login-name"></label>
      </div>
      <div class="control-group">
        <%= f.text_field :username, placeholder: "Username", class: "login-field" %>
        <label class="login-field-icon fui-man-16" for="login-name"></label>
      </div>
      <div class="control-group">
        <%= f.text_field :name, placeholder: "Name", class: "login-field" %>
        <label class="login-field-icon fui-man-16" for="login-name"></label>
      </div>
      <div class="control-group">
        <%= f.password_field :password, placeholder: "Password", class: "login-field" %>
        <label class="login-field-icon fui-lock-16" for="login-name"></label>
      </div>
      <%= submit_tag "Create Memories", class: "btn btn-primary btn-large btn-block" %>

      <a id="have-an-account" class="login-link" href="#">Have an account?</a>

    </div>
    <% end %>
  </div>
</div>
