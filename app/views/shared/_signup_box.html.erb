<div class="row">
  <div class="span6">
    <h3 class="demo-panel-title">Want to remember?</h3>
  </div>
  <div class="span6">
    <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <ul>
          <% @user.errors.full_messages.each do |e| %>
            <li><%= e %></li>
          <% end %>
        </ul>
      <% end %>
    <div class="login-form">
      <div class="control-group">
        <%= f.text_field :email, placeholder: "email", class: "login-field" %>
      </div>
      <div class="control-group">
        <%= f.text_field :username, placeholder: "username", class: "login-field" %>
      </div>
      <div class="control-group">
        <%= f.text_field :name, placeholder: "name", class: "login-field" %>
      </div>
      <div class="control-group">
        <%= f.password_field :password, placeholder: "password", class: "login-field" %>
      </div>
      <%= submit_tag "Create Memories", class: "btn btn-primary btn-large btn-block" %>
    </div>
    <% end %>
  </div>
</div>

