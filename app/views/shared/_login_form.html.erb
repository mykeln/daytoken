<div class="row">
  <div class="span4">
    <h3 class="demo-panel-title">Show me my memories</h3>
  </div>
  <div class="span4">
    <%= form_tag sessions_path do %>
    <div class="login-form">
      <div class="control-group">
        <%= text_field_tag :username, nil, placeholder: "Username", class: "login-field", id: "login-name" %>
        <label class="login-field-icon fui-man-16" for="login-name"></label>
      </div>

      <div class="control-group">
        <%= password_field_tag :password, nil,  placeholder: "Password", class: "login-field", id: "login-pass" %>
        <label class="login-field-icon fui-lock-16" for="login-pass"></label>
      </div>
      <%= submit_tag "Login", class: "btn btn-primary btn-large btn-block" %>
    </div>
    <% end %>
  </div>

</div>